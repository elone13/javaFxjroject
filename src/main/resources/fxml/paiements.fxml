<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="22" alignment="CENTER" styleClass="page-root">
    <Label text="Gestion des Paiements" styleClass="title-label" />
    <TableView fx:id="tablePaiements" maxWidth="700" minHeight="220">
        <columns>
            <TableColumn text="ID" fx:id="colId" />
            <TableColumn text="Montant" fx:id="colMontant" />
            <TableColumn text="Date" fx:id="colDate" />
            <TableColumn text="Participant" fx:id="colParticipant" />
            <TableColumn text="Événement" fx:id="colEvenement" />
        </columns>
    </TableView>
    <HBox spacing="14" alignment="CENTER">
        <TextField fx:id="montantField" promptText="Montant" styleClass="input-field" />
        <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)" styleClass="input-field" />
        <TextField fx:id="participantField" promptText="ID Participant" styleClass="input-field" />
        <TextField fx:id="evenementField" promptText="ID Événement" styleClass="input-field" />
        <Button text="Ajouter" fx:id="ajouterBtn" styleClass="main-btn" />
        <Button text="Modifier" fx:id="modifierBtn" styleClass="main-btn" />
        <Button text="Supprimer" fx:id="supprimerBtn" styleClass="main-btn" />
    </HBox>
</VBox> 