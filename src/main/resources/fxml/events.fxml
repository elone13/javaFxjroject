<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.EventController">
    <top>
        <HBox spacing="14" alignment="CENTER_LEFT" styleClass="page-header">
            <Button text="Retour" onAction="#handleBack" styleClass="main-btn" />
            <Label text="Gestion des Événements" styleClass="title-label" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="eventTable" prefHeight="300" maxWidth="900">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" />
                <TableColumn text="Titre" fx:id="titleColumn" />
                <TableColumn text="Date" fx:id="dateColumn" />
                <TableColumn text="Client" fx:id="clientColumn" />
                <TableColumn text="Prestataire" fx:id="providerColumn" />
                <TableColumn text="Statut" fx:id="statusColumn" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="14" styleClass="page-bottom">
            <HBox spacing="14" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAdd" styleClass="main-btn" />
                <Button text="Modifier" onAction="#handleEdit" styleClass="main-btn" />
                <Button text="Supprimer" onAction="#handleDelete" styleClass="main-btn" />
            </HBox>
            <HBox spacing="14" alignment="CENTER">
                <TextField fx:id="titleField" promptText="Titre" styleClass="input-field" />
                <DatePicker fx:id="datePicker" promptText="Date" styleClass="input-field" />
                <TextField fx:id="clientField" promptText="Client (ID)" styleClass="input-field" />
                <TextField fx:id="providerField" promptText="Prestataire" styleClass="input-field" />
                <TextField fx:id="statusField" promptText="Statut" styleClass="input-field" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane> 