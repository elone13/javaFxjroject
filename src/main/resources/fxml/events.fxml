<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.EventController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Retour" onAction="#handleBack" />
            <Label text="Gestion des Événements" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="eventTable" prefHeight="300">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" />
                <TableColumn text="Titre" fx:id="titleColumn" />
                <TableColumn text="Date" fx:id="dateColumn" />
                <TableColumn text="Client" fx:id="clientColumn" />
                <TableColumn text="Prestataire" fx:id="providerColumn" />
                <TableColumn text="Statut" fx:id="statusColumn" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <Button text="Ajouter" onAction="#handleAdd" />
                <Button text="Modifier" onAction="#handleEdit" />
                <Button text="Supprimer" onAction="#handleDelete" />
            </HBox>
            <HBox spacing="10">
                <TextField fx:id="titleField" promptText="Titre" />
                <DatePicker fx:id="datePicker" promptText="Date" />
                <TextField fx:id="clientField" promptText="Client (ID)" />
                <TextField fx:id="providerField" promptText="Prestataire" />
                <TextField fx:id="statusField" promptText="Statut" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane> 