<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER">
    <Label text="Gestion des Salles" styleClass="title-label" />
    <TableView fx:id="tableSalles">
        <columns>
            <TableColumn text="ID" fx:id="colId" />
            <TableColumn text="Nom" fx:id="colNom" />
            <TableColumn text="Capacité" fx:id="colCapacite" />
            <TableColumn text="Localisation" fx:id="colLocalisation" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="nomField" promptText="Nom" />
        <TextField fx:id="capaciteField" promptText="Capacité" />
        <TextField fx:id="localisationField" promptText="Localisation" />
        <Button text="Ajouter" fx:id="ajouterBtn" />
        <Button text="Modifier" fx:id="modifierBtn" />
        <Button text="Supprimer" fx:id="supprimerBtn" />
    </HBox>
</VBox> 