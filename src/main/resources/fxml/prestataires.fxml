<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER">
    <Label text="Gestion des Prestataires" styleClass="title-label" />
    <TableView fx:id="tablePrestataires">
        <columns>
            <TableColumn text="ID" fx:id="colId" />
            <TableColumn text="Nom" fx:id="colNom" />
            <TableColumn text="Service" fx:id="colService" />
            <TableColumn text="Contact" fx:id="colContact" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="nomField" promptText="Nom" />
        <TextField fx:id="serviceField" promptText="Service" />
        <TextField fx:id="contactField" promptText="Contact" />
        <Button text="Ajouter" fx:id="ajouterBtn" />
        <Button text="Modifier" fx:id="modifierBtn" />
        <Button text="Supprimer" fx:id="supprimerBtn" />
    </HBox>
</VBox> 