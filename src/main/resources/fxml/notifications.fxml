<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER">
    <Label text="Gestion des Notifications" styleClass="title-label" />
    <TableView fx:id="tableNotifications">
        <columns>
            <TableColumn text="ID" fx:id="colId" />
            <TableColumn text="Type" fx:id="colType" />
            <TableColumn text="Destinataire" fx:id="colDestinataire" />
            <TableColumn text="Contenu" fx:id="colContenu" />
            <TableColumn text="Date" fx:id="colDate" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="typeField" promptText="Type" />
        <TextField fx:id="destinataireField" promptText="Destinataire" />
        <TextField fx:id="contenuField" promptText="Contenu" />
        <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD HH:MM)" />
        <Button text="Ajouter" fx:id="ajouterBtn" />
        <Button text="Modifier" fx:id="modifierBtn" />
        <Button text="Supprimer" fx:id="supprimerBtn" />
    </HBox>
</VBox> 