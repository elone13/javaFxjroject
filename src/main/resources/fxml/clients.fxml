<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.ClientController">
    <top>
        <HBox spacing="14" alignment="CENTER_LEFT" styleClass="page-header">
            <Button text="Retour" onAction="#handleBack" styleClass="main-btn" />
            <Label text="Gestion des Clients" styleClass="title-label" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="clientTable" prefHeight="300" maxWidth="700">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" />
                <TableColumn text="Nom" fx:id="nameColumn" />
                <TableColumn text="Email" fx:id="emailColumn" />
                <TableColumn text="Téléphone" fx:id="phoneColumn" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="14" styleClass="page-bottom">
            <HBox spacing="14" alignment="CENTER">
                <Button text="Ajouter" onAction="#handleAdd" styleClass="main-btn" />
                <Button text="Modifier" onAction="#handleEdit" styleClass="main-btn" />
                <Button text="Supprimer" onAction="#handleDelete" styleClass="main-btn" />
            </HBox>
            <HBox spacing="14" alignment="CENTER">
                <TextField fx:id="nameField" promptText="Nom" styleClass="input-field" />
                <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
                <TextField fx:id="phoneField" promptText="Téléphone" styleClass="input-field" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane> 