<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.ClientController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Retour" onAction="#handleBack" />
            <Label text="Gestion des Clients" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="clientTable" prefHeight="300">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" />
                <TableColumn text="Nom" fx:id="nameColumn" />
                <TableColumn text="Email" fx:id="emailColumn" />
                <TableColumn text="Téléphone" fx:id="phoneColumn" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <Button text="Ajouter" onAction="#handleAdd" />
                <Button text="Modifier" onAction="#handleEdit" />
                <Button text="Supprimer" onAction="#handleDelete" />
            </HBox>
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Nom" />
                <TextField fx:id="emailField" promptText="Email" />
                <TextField fx:id="phoneField" promptText="Téléphone" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane> 