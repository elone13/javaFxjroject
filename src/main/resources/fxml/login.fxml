<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.LoginController" alignment="CENTER" spacing="18" styleClass="login-root">
    <Label text="Connexion" styleClass="title-label" />
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
    <Button text="Se connecter" onAction="#handleLogin" maxWidth="Infinity" styleClass="main-btn" />
    <Label fx:id="errorLabel" textFill="red" visible="false" />
</VBox> 