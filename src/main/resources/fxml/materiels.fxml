<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="22" alignment="CENTER" styleClass="page-root">
    <Label text="Gestion du Matériel" styleClass="title-label" />
    <TableView fx:id="tableMateriels" maxWidth="700" minHeight="220">
        <columns>
            <TableColumn text="ID" fx:id="colId" />
            <TableColumn text="Type" fx:id="colType" />
            <TableColumn text="État" fx:id="colEtat" />
            <TableColumn text="Quantité" fx:id="colQuantite" />
        </columns>
    </TableView>
    <HBox spacing="14" alignment="CENTER">
        <TextField fx:id="typeField" promptText="Type" styleClass="input-field" />
        <TextField fx:id="etatField" promptText="État" styleClass="input-field" />
        <TextField fx:id="quantiteField" promptText="Quantité" styleClass="input-field" />
        <Button text="Ajouter" fx:id="ajouterBtn" styleClass="main-btn" />
        <Button text="Modifier" fx:id="modifierBtn" styleClass="main-btn" />
        <Button text="Supprimer" fx:id="supprimerBtn" styleClass="main-btn" />
    </HBox>
</VBox> 