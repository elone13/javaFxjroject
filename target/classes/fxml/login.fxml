<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.LoginController" alignment="CENTER" spacing="20.0" styleClass="root">
   <children>
      <VBox alignment="CENTER" maxWidth="400.0" spacing="30.0" styleClass="login-container">
         <children>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label styleClass="login-title" text="Event Manager" />
                  <Label style="-fx-text-fill: #4a5568; -fx-font-size: 16px; -fx-font-weight: 500;" text="Connectez-vous à votre compte" />
               </children>
            </VBox>
            
            <VBox spacing="25.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Nom d'utilisateur" style="-fx-font-weight: bold; -fx-text-fill: #f9f9f9ff;" />
                        <TextField fx:id="usernameField" promptText="Saisissez votre nom d'utilisateur" styleClass="form-field" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Mot de passe" style="-fx-font-weight: bold; -fx-text-fill: #f3f4f5ff;" />
                        <PasswordField fx:id="passwordField" promptText="Saisissez votre mot de passe" styleClass="form-field" />
                     </children>
                  </VBox>
                  
                  <Label fx:id="errorLabel" styleClass="error-text" textFill="#e53e3e" visible="false" wrapText="true" />
                  
                  <Button maxWidth="1.7976931348623157E308" onAction="#handleLogin" styleClass="btn-primary" text="Se connecter" />
               </children>
            </VBox>
            
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: #fefefeff; -fx-font-size: 12px;" text="Comptes de démonstration:" />
                  <Label style="-fx-text-fill: #ffffffff; -fx-font-size: 12px;" text="Admin: admin / admin123" />
                  <Label style="-fx-text-fill: #ffffffff; -fx-font-size: 12px;" text="Employé: employe / employe123" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
   </padding>
</VBox>