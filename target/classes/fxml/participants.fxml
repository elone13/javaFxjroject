<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.ParticipantController" stylesheets="@../css/style.css">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
         <children>
            <Button fx:id="backButton" onAction="#handleBack" styleClass="btn-secondary" text="← Retour" />
            <Label styleClass="page-title" text="Gestion des Participants" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleClear" styleClass="btn-outline" text="Effacer" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0">
         <children>
            <TableView fx:id="participantTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                  <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nom" />
                  <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                  <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Téléphone" />
                  <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                  <TableColumn fx:id="companyColumn" prefWidth="150.0" text="Entreprise" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <VBox spacing="15.0" styleClass="form-panel">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button onAction="#handleAdd" styleClass="btn-primary" text="+ Ajouter" />
                  <Button onAction="#handleEdit" styleClass="btn-warning" text="✎ Modifier" />
                  <Button onAction="#handleDelete" styleClass="btn-danger" text="✕ Supprimer" />
               </children>
            </HBox>
            <GridPane hgap="15.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nom complet *" />
                        <TextField fx:id="nameField" promptText="Nom du participant" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1">
                     <children>
                        <Label text="Email *" />
                        <TextField fx:id="emailField" promptText="email@exemple.com" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="2">
                     <children>
                        <Label text="Téléphone" />
                        <TextField fx:id="phoneField" promptText="06 12 34 56 78" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Type" />
                        <ComboBox fx:id="typeComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Entreprise" />
                        <TextField fx:id="companyField" promptText="Nom de l'entreprise" styleClass="form-field" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
