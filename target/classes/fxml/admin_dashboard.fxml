<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.AdminDashboardController" spacing="40.0" styleClass="dashboard-container" style="-fx-background-color: linear-gradient(to bottom right, #2d3748 0%, #1a202c 100%);">
   <children>
      <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-header">
         <children>
            <Label styleClass="dashboard-title" style="-fx-text-fill: #ffffff; -fx-font-size: 32px; -fx-font-weight: bold;" text="Tableau de Bord Administrateur" />
            <Label styleClass="dashboard-subtitle" style="-fx-text-fill: #edf2f7; -fx-font-size: 18px;" text="Gestion complète de la plateforme événementielle" />
         </children>
      </VBox>
      
      <GridPane hgap="30.0" vgap="30.0" styleClass="dashboard-grid">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="150.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="150.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-card" style="-fx-background-color: #2d3748; -fx-background-radius: 12px; -fx-border-color: #4a5568; -fx-border-width: 1; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0, 0, 4);">
               <children>
                  <Label styleClass="card-icon" style="-fx-text-fill: #3b82f6; -fx-font-size: 48px;" text="📅" />
                  <Label styleClass="card-title" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;" text="Événements" />
                  <Button fx:id="eventButton" maxWidth="1.7976931348623157E308" onAction="#handleEvent" styleClass="btn-primary" style="-fx-background-color: #3b82f6;" text="Gérer les Événements" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-card" GridPane.columnIndex="1" style="-fx-background-color: #2d3748; -fx-background-radius: 12px; -fx-border-color: #4a5568; -fx-border-width: 1; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0, 0, 4);">
               <children>
                  <Label styleClass="card-icon" text="👥" style="-fx-text-fill: #10b981; -fx-font-size: 48px;" />
                  <Label styleClass="card-title" text="Clients" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Button fx:id="clientButton" maxWidth="1.7976931348623157E308" onAction="#handleClient" styleClass="btn-primary" style="-fx-background-color: #10b981;" text="Gérer les Clients" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-card" GridPane.columnIndex="2" style="-fx-background-color: #2d3748; -fx-background-radius: 12px; -fx-border-color: #4a5568; -fx-border-width: 1; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0, 0, 4);">
               <children>
                  <Label styleClass="card-icon" text="🎯" style="-fx-text-fill: #f59e0b; -fx-font-size: 48px;" />
                  <Label styleClass="card-title" text="Participants" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Button fx:id="participantButton" maxWidth="1.7976931348623157E308" onAction="#handleParticipant" styleClass="btn-primary" style="-fx-background-color: #f59e0b;" text="Gérer les Participants" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-card" GridPane.rowIndex="1" style="-fx-background-color: #2d3748; -fx-background-radius: 12px; -fx-border-color: #4a5568; -fx-border-width: 1; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0, 0, 4);">
               <children>
                  <Label styleClass="card-icon" text="📋" style="-fx-text-fill: #ec4899; -fx-font-size: 48px;" />
                  <Label styleClass="card-title" text="Inscriptions" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Button fx:id="inscriptionButton" maxWidth="1.7976931348623157E308" onAction="#handleInscription" styleClass="btn-primary" style="-fx-background-color: #ec4899;" text="Gérer les Inscriptions" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-card" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #2d3748; -fx-background-radius: 12px; -fx-border-color: #4a5568; -fx-border-width: 1; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0, 0, 4);">
               <children>
                  <Label styleClass="card-icon" text="🏢" style="-fx-text-fill: #8b5cf6; -fx-font-size: 48px;" />
                  <Label styleClass="card-title" text="Ressources" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Button fx:id="resourceButton" maxWidth="1.7976931348623157E308" onAction="#handleResource" styleClass="btn-primary" style="-fx-background-color: #8b5cf6;" text="Gérer les Ressources" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-card" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-background-color: #2d3748; -fx-background-radius: 12px; -fx-border-color: #4a5568; -fx-border-width: 1; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0, 0, 4);">
               <children>
                  <Label styleClass="card-icon" text="📊" style="-fx-text-fill: #ef4444; -fx-font-size: 48px;" />
                  <Label styleClass="card-title" text="Rapports" style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Button fx:id="reportButton" maxWidth="1.7976931348623157E308" onAction="#handleReport" styleClass="btn-primary" style="-fx-background-color: #ef4444;" text="Générer Rapports" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </GridPane>
      
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="btn-secondary" text="Déconnexion" style="-fx-background-color: #4b5563; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 24;" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>