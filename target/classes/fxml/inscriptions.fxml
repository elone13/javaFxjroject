<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.InscriptionController" stylesheets="@../css/style.css">
   <top>
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
               <children>
                  <Button fx:id="backButton" onAction="#handleBack" styleClass="btn-secondary" text="← Retour" />
                  <Label styleClass="page-title" text="Gestion des Inscriptions" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button onAction="#handleClear" styleClass="btn-outline" text="Effacer" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" styleClass="stats-bar">
               <children>
                  <Label fx:id="statsLabel" styleClass="stats-text" text="Statistiques des inscriptions" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="20.0">
         <children>
            <TableView fx:id="inscriptionTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="eventColumn" prefWidth="180.0" text="Événement" />
                  <TableColumn fx:id="participantColumn" prefWidth="150.0" text="Participant" />
                  <TableColumn fx:id="dateColumn" prefWidth="130.0" text="Date Inscription" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Statut" />
                  <TableColumn fx:id="paymentColumn" prefWidth="100.0" text="Paiement" />
                  <TableColumn fx:id="amountColumn" prefWidth="80.0" text="Montant" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <VBox spacing="15.0" styleClass="form-panel">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button onAction="#handleAdd" styleClass="btn-primary" text="+ Ajouter" />
                  <Button onAction="#handleEdit" styleClass="btn-warning" text="✎ Modifier" />
                  <Button onAction="#handleDelete" styleClass="btn-danger" text="✕ Supprimer" />
               </children>
            </HBox>
            <GridPane hgap="20.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Événement *" />
                        <ComboBox fx:id="eventComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="8.0" GridPane.columnIndex="1">
                     <children>
                        <Label text="Participant *" />
                        <ComboBox fx:id="participantComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="8.0" GridPane.columnIndex="2">
                     <children>
                        <Label text="Montant (€)" />
                        <TextField fx:id="amountField" promptText="0.00" styleClass="form-field" text="0.00" />
                     </children>
                  </VBox>
                  <VBox spacing="8.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Statut Inscription" />
                        <ComboBox fx:id="statusComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Statut Paiement" />
                        <ComboBox fx:id="paymentStatusComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                     </children>
                  </VBox>
                  <VBox spacing="8.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <children>
                        <Label text="Notes" />
                        <TextArea fx:id="notesArea" maxHeight="70.0" prefRowCount="3" promptText="Notes additionnelles..." styleClass="form-field" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
