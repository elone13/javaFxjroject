<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanager.controller.ClientController" stylesheets="@../css/style.css" styleClass="root">
    
    <!-- Top Header -->
    <top>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
                    <children>
                        <Button text="← Retour" onAction="#handleBack" styleClass="btn-secondary" />
                        <Label text="👥 Gestion des Clients" styleClass="page-title" />
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>
                </HBox>
                
                <!-- Selection Info Bar -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #374151; -fx-padding: 10 30 10 30;" visible="false" fx:id="selectionBar">
                    <children>
                        <Label fx:id="selectionLabel" text="0 client(s) sélectionné(s)" style="-fx-text-fill: #e5e7eb; -fx-font-weight: 600;" />
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    
    <!-- Center Table -->
    <center>
        <VBox spacing="20.0" style="-fx-padding: 30;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="📋 Liste des clients" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <CheckBox fx:id="selectAllCheckBox" text="Tout sélectionner" styleClass="check-box"/>
                    </children>
                </HBox>
                
                <TableView fx:id="clientTable" prefHeight="300" styleClass="modern-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="ID" fx:id="idColumn" prefWidth="60.0" />
                        <TableColumn text="Nom" fx:id="nameColumn" prefWidth="200.0" />
                        <TableColumn text="Email" fx:id="emailColumn" prefWidth="250.0" />
                        <TableColumn text="Téléphone" fx:id="phoneColumn" prefWidth="150.0" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    
    <!-- Bottom Action Bar -->
    <bottom>
        <VBox spacing="0" styleClass="form-panel">
            <children>
                <!-- Quick Actions -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 20 30 20 30; -fx-background-color: #1f2937;">
                    <children>
                        <Button text="➕ Nouveau Client" onAction="#handleAdd" styleClass="btn-primary" />
                        <Separator orientation="VERTICAL"/>
                        <Label text="Actions rapides :" style="-fx-text-fill: #9ca3af; -fx-font-weight: 500;" />
                        <Button text="✎ Modifier" onAction="#handleEdit" styleClass="btn-warning" />
                        <Button text="✕ Supprimer" onAction="#handleDelete" styleClass="btn-danger" />
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalLabel" text="Total : 0 client(s)" style="-fx-text-fill: #9ca3af;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane> 